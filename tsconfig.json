{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es5",
    "allowJs": true,
    "downlevelIteration": true,
    "lib": ["dom", "es6", "es2016", "es2017.object", "dom.iterable", "scripthost"],
    "moduleResolution": "node"
  },
  "files": [
    "node_modules/phaser-ce/typescript/phaser.d.ts"
  ],
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "src/assets/**/*"
  ]
}
